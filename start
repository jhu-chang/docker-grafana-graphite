#! /bin/bash

CONTAINER_NAME="spark"
if [ $(docker ps -a | grep $CONTAINER_NAME | awk '{print $NF}' | wc -l) -gt 0 ];then
	docker kill $CONTAINER_NAME
	docker rm $CONTAINER_NAME
fi
if [ -d "./logs" ];then
	rm -fr ./logs/*
fi

docker build -t jhu/spark github.com/jhu-chang/docker-grafana-graphite.git
docker run -d -v $(pwd)/logs:/var/log/supervisor -p 80:80 -p 81:81 -p 8125:8125/udp -p 8126:8126 -p 2003:2003 --name ${CONTAINER_NAME} jhu/spark 

